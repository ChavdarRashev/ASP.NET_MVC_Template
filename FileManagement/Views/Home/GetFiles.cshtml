@{
    ViewData["Title"] = "GetFiles";
}

@section CSS {

    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css" />
    <link rel="stylesheet" href="~/css/Rashev.css" asp-append-version="true" />
}

<h1>GetFiles</h1>


<table id="RashevDatatable" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
