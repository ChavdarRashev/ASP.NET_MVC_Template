    </tbody>
</table>


@section Scripts {

    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"
            asp-fallback-src="~/lib/datatables/js/jquery.dataTables.min.js"
            asp-fallback-test="window.jQuery && window.jQuery.fn"
            crossorigin="anonymous">
    </script>

    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"
            asp-fallback-src="~/lib/datatables/js/dataTables.bootstrap5.min.js"
            asp-fallback-test="window.jQuery && window.jQuery.fn"
